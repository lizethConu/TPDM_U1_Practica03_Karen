<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBDBDB"
    tools:context=".Main2Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join a Norwegian Club!"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/hello"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hello"
        android:gravity="center"
        android:textSize="20dp"
        android:id="@+id/info"
        android:text="Practice Chatting in Norwegian with other learners"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="100dp"
        android:id="@+id/p1"
        android:src="@drawable/p1" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/p2" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="250dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/p3" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/p1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="120dp"
        android:id="@+id/p4"
        android:src="@drawable/p4"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/p4"
        android:background="#FFFF"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="20dp"
        android:textColor="#111010"
        android:id="@+id/find"
        android:text="FIND ME A CLUB"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATE"
        android:background="#FFF"
        android:layout_below="@id/find"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="60dp"
        android:id="@+id/create"
        android:textSize="20dp"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLUB CODE"
        android:textSize="20dp"
        android:background="#FFF"
        android:layout_below="@id/find"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"

        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/create">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/i2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/icon1"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/i1"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/icon1"
            android:id="@+id/icon2"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/i3"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/icon2"
            android:id="@+id/icon3"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/i1"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/icon3"
            android:id="@+id/icon4"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/i3"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/icon4"
            android:id="@+id/icon5"/>
    </RelativeLayout>
</RelativeLayout>